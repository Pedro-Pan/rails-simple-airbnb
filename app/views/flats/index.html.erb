<h1>All Flats</h1>

<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-4">
      <div class="flat-card">
        <div class="flat-card-image" style="background-image: url('https://picsum.photos/800/600')"></div>
        <div class="flat-card-content">
          <div class="flat-card-title">
            <h4><%=flat.name%></h4>
            <p><%=flat.address%></p>
          </div>
          <div class="flex">
            <div class="flex">
              <i class="fas fa-user-friends"><span><%=flat.number_of_guests%></span></i>
            </div>
            <div class="flex ml-3">
              <i class="fas fa-euro-sign"><%=flat.price_per_night%></i>
            </div>
          </div>
        </div>
        <div class="flat-card-actions">
          <%= link_to "More info", flat_path(flat.id) %>
          <%= link_to "Edit", edit_flat_path(flat.id), class: "jaune" %>
          <%= link_to "Remove",
            flat_path(flat.id), class: "rouge",
            method: :delete,
            data: {comfirm: "Are you sure?"} %>
        </div>
     </div>
    </div>
    <% end %>
  </div>
</div>
